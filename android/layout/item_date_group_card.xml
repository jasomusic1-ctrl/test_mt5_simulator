<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Date Header Row - OUTSIDE the CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        android:background="#F5F5F5">

        <!-- Date Text -->
        <TextView
            android:id="@+id/tvDateHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yesterday, 26 December"
            android:textColor="#1F2937"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif" />

        <!-- Daily P/L Sum -->
        <TextView
            android:id="@+id/tvDailyProfitLoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-865.07 USD"
            android:textColor="#EF4444"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- CardView containing ONLY the trade items -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="#FFFFFF">

        <!-- Container for trade items - will be populated dynamically -->
        <LinearLayout
            android:id="@+id/tradesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider_line"
            android:showDividers="middle" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
