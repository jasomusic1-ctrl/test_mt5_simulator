<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/demo_accounts_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingTop="8dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp">

        <!-- Account Card 1 - DEMO -->
        <androidx.cardview.widget.CardView
            android:id="@+id/demo_account_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/account_icon_1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/yellow_circle"
                    android:contentDescription="Account icon"
                    android:padding="12dp"
                    android:src="@drawable/ic_trade"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_account_name_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="DEMO # 503918274"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/iv_chevron_1"
                    app:layout_constraintStart_toEndOf="@id/account_icon_1"
                    app:layout_constraintTop_toTopOf="@id/account_icon_1" />

                <TextView
                    android:id="@+id/tv_account_type_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:text="MT5 • Demo"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/account_icon_1"
                    app:layout_constraintTop_toBottomOf="@id/tv_account_name_1" />

                <ImageView
                    android:id="@+id/iv_chevron_1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="View details"
                    android:src="@drawable/ic_chevron_right"
                    app:layout_constraintBottom_toBottomOf="@id/account_icon_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/account_icon_1"
                    app:tint="#9E9E9E" />

                <TextView
                    android:id="@+id/tv_balance_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="10,000.00 USD"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/account_icon_1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Account Card 2 - MONEY -->
        <androidx.cardview.widget.CardView
            android:id="@+id/demo_account_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/account_icon_2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/yellow_circle"
                    android:contentDescription="Account icon"
                    android:padding="12dp"
                    android:src="@drawable/ic_trade"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_account_name_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="MONEY # 792650183"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/iv_chevron_2"
                    app:layout_constraintStart_toEndOf="@id/account_icon_2"
                    app:layout_constraintTop_toTopOf="@id/account_icon_2" />

                <TextView
                    android:id="@+id/tv_account_type_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:text="MT5 • Standard"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/account_icon_2"
                    app:layout_constraintTop_toBottomOf="@id/tv_account_name_2" />

                <ImageView
                    android:id="@+id/iv_chevron_2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="View details"
                    android:src="@drawable/ic_chevron_right"
                    app:layout_constraintBottom_toBottomOf="@id/account_icon_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/account_icon_2"
                    app:tint="#9E9E9E" />

                <TextView
                    android:id="@+id/tv_balance_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="10,000.00 USD"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/account_icon_2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
