<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Currency Pair Flags -->
        <FrameLayout
            android:id="@+id/flagsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivFlagBase"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Base Currency" />

            <ImageView
                android:id="@+id/ivFlagQuote"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Quote Currency" />

        </FrameLayout>

        <!-- Currency Pair Name -->
        <TextView
            android:id="@+id/tvCurrencyPair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="XAU/USD"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvTargetPrice"
            app:layout_constraintStart_toEndOf="@+id/flagsContainer"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Trade Direction and Lot Size -->
        <LinearLayout
            android:id="@+id/directionContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/flagsContainer"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrencyPair">

            <TextView
                android:id="@+id/tvTradeDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:textColor="#2196F3"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvLotSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0.40 lot"
                android:textColor="#2196F3"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvEntryPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="at ~4534.153"
                android:textColor="#757575"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- Target Type Badge -->
        <TextView
            android:id="@+id/tvTargetType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/badge_pending_type"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="LIMIT"
            android:textColor="#FF9800"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/flagsContainer"
            app:layout_constraintTop_toBottomOf="@+id/directionContainer" />

        <!-- Target Price -->
        <TextView
            android:id="@+id/tvTargetPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4532.568"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
