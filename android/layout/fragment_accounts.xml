                            android:layout_alignParentBottom="true"
                            android:contentDescription="Info"
                            android:src="@drawable/ic_info" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- MONEY Account Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <!-- Demo Badge -->
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="-16dp"
                            android:layout_marginEnd="-16dp"
                            android:background="#4CAF50"
                            android:gravity="center"
                            android:rotation="45"
                            android:text="Demo"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <!-- Logo -->
                        <View
                            android:id="@+id/logo_money"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="#FFC107" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/logo_money"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_account_MONEY"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MONEY/ACC"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_broker_name_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Exness Technologies Ltd"
                                android:textColor="#2196F3"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_account_details_3"
                                android:layout_width="wrap_content"
