<?xml version="1.0" encoding="utf-8"?>
<!-- item_closed_trade.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Top Row: Currency Icon, Pair and P&L -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <!-- Currency Icon (Combined Flag) -->
            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp">

                <!-- Base Currency Flag (USD) -->
                <ImageView
                    android:id="@+id/ivBaseCurrencyFlag"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_gravity="start|center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/usa" />

                <!-- Quote Currency Flag (JPY) -->
                <ImageView
                    android:id="@+id/ivQuoteCurrencyFlag"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/eng"
                    android:scaleType="centerCrop" />

            </FrameLayout>

            <!-- Currency Pair Name -->
            <TextView
                android:id="@+id/tvCurrencyPair"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="USD/JPY"
                android:textColor="#1F2937"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- P&L Amount -->
            <TextView
                android:id="@+id/tvPnL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-0.03 USD"
                android:textColor="#EF4444"
                android:textSize="18sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Bottom Row: Trade Details and Exit Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="44dp">

            <!-- Trade Action, Lot Size and Entry Price -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTradeAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy"
                    android:textColor="#3B82F6"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvLotSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.01 lot"
                    android:textColor="#3B82F6"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" at "
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvEntryPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="157.363"
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Exit/Close Price -->
            <TextView
                android:id="@+id/tvExitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="157.358"
                android:textColor="#9CA3AF"
                android:textSize="15sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>