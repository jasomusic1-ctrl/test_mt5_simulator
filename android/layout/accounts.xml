                        android:id="@+id/tv_balance_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:textStyle="normal"
                        android:text="0.00"
