                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_account_VIP"
                    app:layout_constraintTop_toBottomOf="@+id/tv_account_VIP" />

                <TextView
                    android:id="@+id/tv_account_details_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="211943200 — Exness-MT5Trial9"
